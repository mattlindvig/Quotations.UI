@model Quotations.UI.Models.Quote

@{
    ViewData["Title"] = "View";
}

<h2>View</h2>

<h4>Quote</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateQuote">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Quotation" class="control-label"></label>
                <textarea asp-for="Quotation" class="form-control" /></textarea>
                <span asp-validation-for="Quotation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author.FirstName" class="control-label">Author's First Name:</label>
                <input asp-for="Author.FirstName" class="form-control" />
                <span asp-validation-for="Author.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author.LastName" class="control-label">Author's Last Name:</label>
                <input asp-for="Author.LastName" class="form-control" />
                <span asp-validation-for="Author.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SourceInfo" class="control-label">Source (book, url, etc):</label>
                <input asp-for="SourceInfo" class="form-control" />
                <span asp-validation-for="SourceInfo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
